{
    "common": {
        "name":                     "hp-ilo",
        "version":                  "0.0.1",
        "title":                    "HP ILO Adapter",
        "desc":                     {
 			             "en": "Reads temperature data of Hewlett-Packard servers with Integrated Lights-out (ILO)",
 			             "de": "Liest Temperaturdaten von Hewlett-Packard Servern mit Integrated Lights-out (ILO) aus",
 			             "ru": "Reads temperature data of Hewlett-Packard servers with Integrated Lights-out (ILO)"
	    },
	    "license":                "MIT",
        "platform":                 "Javascript/Node.js",
        "mode":                     "daemon",
        "icon":                     "hp-ilo.png",
        "enabled":                  true,
        "materialize": 				true,
	    "extIcon":                  "https://raw.githubusercontent.com/SebastianSchultz/ioBroker.hp-ilo/master/admin/hp-ilo.png",
	    "keywords":                 ["hp-ilo", "HP", "Hewlett-Packard", "Hewlett", "Packard", "ILO", "Integrated", "Lights-out"],
        "readme":                   "https://github.com/SebastianSchultz/iobroker.hp-ilo/blob/master/README.md",
	    "loglevel":                 "info",
        "type":                     "multimedia"
    },
    "native": {
        "ip":       "",
		"timeout":  "15000",
        "interval": "60000"
    },
    "objects": [

    ],
    "authors": [
	    "SebastianSchultz <mail@sebastian-schultz.de>"
    ],
    "instanceObjects": [
      {
        "_id":  "on",
        "type": "state",
        "common": {
          "name": "Is TV is ON",
          "role": "indicator.online",
          "type": "string",
          "read": true,
          "write": false
        },
        "native": {}
      },
      {
        "_id":  "popup",
        "type": "state",
        "common": {
          "name": "Show popup text on TV",
          "role": "state",
